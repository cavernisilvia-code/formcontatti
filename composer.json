{
  "name": "didattica/php-form-project",
  "description": "Progetto didattico: form HTML + submit + validazione + test PHPUnit (senza storage/CSRF)",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "laminas/laminas-escaper": "^2.13"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "serve": "php -S localhost:8000 -t public",
    "lint": "phpcs",
    "lint:fix": "phpcbf"
  }
}
